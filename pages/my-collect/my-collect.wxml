                            </view>
                        </view>
                    </view>
                    <!-- 底部操作 -->
                    <view class="item-botact">
                        <view class="botact">删除</view>
                        <view class="botact">浏览</view>
                        <view class="botact">编辑</view>
                    </view>
                </navigator>
            </view>
        </view>

    </view>
