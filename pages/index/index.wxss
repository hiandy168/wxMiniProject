/**index.wxss**/


.index_tab_box{
	height: 83rpx;
	display: flex;
	border-bottom:2rpx solid rgb(206,206,206);
	align-items: center;
}

.index_tab_box .tab_items{
	width:50%;
	height:83rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.index_tab_box .tab_items text{
	padding:0 16rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	color:#999999;
	position: relative;
}

.index_tab_box .tab_items.on text{
	border-bottom: 6rpx	solid #FF5168;
	color:black;
}

.swiper_box{
	position: relative;
	height:200rpx;
}

swiper-item image{
	width: 750rpx;
	height: 200rpx;
}

.swiper_box .wx-swiper-dots{
    position: absolute;
    bottom: 30rpx;
}




.search_box{
	background-color:#F5F5F5;
	padding:0 30rpx;
	height: 70rpx;
	border-radius:35rpx;
	display: flex;
	align-items: center;
}

.search_box text{
	font-size: 28rpx;
	flex:1;
}

.search_box image{
	width: 40rpx;
	height: 40rpx;
}



.follow_list_container{
	display: flex;
	flex-wrap: wrap;
	margin:0 30rpx;
}

.follow_list{
	margin-top: 24rpx;
	width: 49%;
	border:1rpx solid rgb(206,206,206);
	border-radius: 10rpx;
	box-sizing: border-box;
}

.follow_list:nth-child(2n){
	margin-left: 2%;
}
.follow_list > image{
	display: block;
	width: 100%;
	height: 220rpx;
}

.f_info_txt{
	margin:16rpx 20rpx;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp:2;
	overflow: hidden;
	font-size: 28rpx;
}

.f_count_box{
	margin:0 20rpx;
	padding:16rpx 0;
	border-top: 1rpx solid rgb(206,206,206);
	display: flex;
}

.f_count_box > image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}

.f_user_box{
	flex: 1;
	display: flex;
	flex-direction: column;
}


.f_user_box text{
	line-height: 40rpx;
}

.f_name_txt {
	font-size: 26rpx;
}

.f_date_txt {
	font-size: 24rpx;
	color:#999999;
}
.empty_box{
	height: 120rpx;
}