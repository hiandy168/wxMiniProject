/* 图文列表 */
.cr-list{
    padding:30rpx;
}
.cr-item{
    margin-bottom:28rpx;
    border-radius:6rpx;
    border:1rpx solid #c5c3d0;
}
/* 图片 */
.cr-item .img-box{
    border-radius:6rpx 6rpx 0 0;
    width: 690rpx;
    height:454rpx;
}

/* 描述及作者信息 */
.cr-item .detail-box{
    padding:10rpx 30rpx;
}

.description{
    height: 100rpx;
    padding-bottom:16repx;
    margin-bottom:26rpx;
    font-size:28rpx;
    color:#4f4f4f;
    border-bottom:1rpx solid #e6e6e6;
    overflow:hidden;
}

/* 作者信息 */
.author-box{
    padding:24rpx 0 ;
    height:90rpx;
    line-height:90rpx;
    overflow:hidden;
}
    .author-box text{
        color:#666;
        font-size:26rpx;
    }
    .author-img{
        width:80rpx;
        height:80rpx;
        float:left;
        margin-right:16rpx;
        border-radius:50%;
    }
    .author-name{
        width: 200rpx;
        float:left;
        line-height:34rpx;
    }
        .name{
            font-size:32rpx;
            font-weight:bold;
        }
    .author-act{
        width: 330rpx;
        float:right;
    }
        .author-act text{
            font-size:28rpx;
        }
        .author-act .icon{
            position:relative;
            top:10rpx;
            width:45rpx;
            height:45rpx;
            display:inline-block;
            margin-left:20rpx;
            background-size:cover;
        }
        .icon-like{
            background-image: url(http://fb.mylove920.com/iconfont/icon_thumb2.png);
        }
        .icon-follow{
            width:30rpx;
            height:30rpx;
             background-image: url(http://fb.mylove920.com/iconfont/icon_share.png);
        }
        .icon-comment{
            top:16rpx;
            background-image: url(http://fb.mylove920.com/iconfont/icon_m_msg.png);
        }
/* 底部操作 */
.item-botact{
    height:80rpx;
    background-color:#f5f5f5;
    border-radius:0 0 6rpx 6rpx;
    overflow:hidden;
}
    .botact{
        float:left;
        height:80rpx;
        line-height:80rpx;
        width:33.33%;
        text-align:center;
        font-size: 32rpx;
        color:#333;
    }
