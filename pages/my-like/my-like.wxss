/* 图文列表 */
.cr-list{
    padding:30rpx;
}
.cr-item{
    margin-bottom:28rpx;
    border-radius:6rpx;
    border:1rpx solid #c5c3d0;
}
/* 图片 */
.cr-item .img-box{
    border-radius:6rpx 6rpx 0 0;
    width: 690rpx;
    height:454rpx;
}

/* 描述及作者信息 */
.cr-item .detail-box{
    padding:10rpx 30rpx;
}

.description{
    margin-bottom:26rpx;
    font-size:28rpx;
    border-bottom:1rpx solid #e6e6e6;
}
.description text{
    display:block;
    height: 96rpx;
    color:#4f4f4f;
    margin-bottom:16rpx;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    overflow:hidden;
}

/* 评论 */
.cr-item .like{
    height: 90rpx;
    line-height: 90rpx;
    position:relative;
}
    .like text{
        font-size:28rpx;
        color:#666;
    }
    .like .icon-like{
        position:absolute;
        top:14rpx;
        right:0;
        width:46rpx;
        height:46rpx;
        background-image: url(http://fb.mylove920.com/iconfont/icon_m_thumb.png);
        background-size:cover;
    }
