/* 图文列表 */
.cr-list{
    padding:30rpx;
}
.cr-item{
    margin-bottom:28rpx;
    border-radius:6rpx;
    border:1rpx solid #c5c3d0;
}
/* 图片 */
.cr-item .img-box{
    border-radius:6rpx 6rpx 0 0;
    width: 690rpx;
    height:454rpx;
}

/* 描述及作者信息 */
.cr-item .detail-box{
    padding:10rpx 30rpx;
}

.description{
    margin-bottom:26rpx;
    font-size:28rpx;
    border-bottom:1rpx solid #e6e6e6;
}
.description text{
    display:block;
    height: 96rpx;
    color:#4f4f4f;
    margin-bottom:16rpx;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    overflow:hidden;
}

/* 评论 */
.cr-item .comment{

}
    .comment .top{
        overflow:hidden;
    }
        .comment text{
            font-size:28rpx;
            color:#333;
        }
        .top .label{
            float:left;
            color:#666;
        }
        .top .date{
            float:right;
            color:#666;
        }

    .comment .context{
        margin-bottom:26rpx;
        font-size:28rpx;
        border-bottom:1rpx solid #e6e6e6;
    }
    .context text{
        display:block;
