/* 图文列表 */
.cr-list{
    padding:30rpx;
}
.cr-item{
    margin-bottom:28rpx;
    border-radius:6rpx;
    border:1rpx solid #c5c3d0;
}
/* 图片 */
.cr-item .img-box{
    border-radius:6rpx 6rpx 0 0;
    width: 690rpx;
    height:454rpx;
}

/* 描述及作者信息 */
.cr-item .detail-box{
    padding:10rpx 30rpx;
}

.description{
    height: 100rpx;
    padding-bottom:16repx;
    margin-bottom:26rpx;
    font-size:28rpx;
    color:#4f4f4f;
    border-bottom:1rpx solid #e6e6e6;
    overflow:hidden;
}

/* 评论 */
.cr-item .comment{

}
    .comment .top{
        overflow:hidden;
    }
        .comment text{
            font-size:28rpx;
            color:#333;
        }
        .top .label{
            float:left;
            color:#666;
        }
        .top .date{
            float:right;
            color:#666;
        }

    .comment .context{
        height:90rpx;
        overflow:hidden;
    }